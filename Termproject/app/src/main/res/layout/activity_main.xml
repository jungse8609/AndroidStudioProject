<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TxtRoundTimer"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/neodgm"
                    android:gravity="center"
                    android:text="999 "
                    android:textAlignment="center"
                    android:textSize="30dp"
                    android:visibility="visible" />

                <Space
                    android:layout_width="50dp"
                    android:layout_height="match_parent"/>

                <FrameLayout
                    android:layout_width="250dp"
                    android:layout_height="30dp">

                    <ImageView
                        android:id="@+id/ImgOpponentHpBackround"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#333333"/>

                    <ImageView
                        android:id="@+id/ImgOpponentCurrentHp"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="#FF0000" />

                    <TextView
                        android:id="@+id/TxtOpponentHpBar"
                        android:layout_width="120dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="50/100"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/neodgm"/>

                </FrameLayout>

            </LinearLayout>


            
            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ImgOpponentDiceAttackBackground"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/black"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ImgOpponentDiceAttack"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@null"
                        android:src="@drawable/hide" />

                </FrameLayout>

                <Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ImgOpponentDiceDefenseBackground"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/black"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ImgOpponentDiceDefense"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@null"
                        android:src="@drawable/hide" />

                </FrameLayout>

                <Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ImgOpponentDiceCounterBackground"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/black"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ImgOpponentDiceCounter"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/hide" />

                </FrameLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImgOpponentResult"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/hide"/>

                <TextView
                    android:id="@+id/TxtOpponentResult"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="+ 100"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="@font/neodgm"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#000000"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImgPlayerResult"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/hide"/>

                <TextView
                    android:id="@+id/TxtPlayerResult"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="+ 100"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="@font/neodgm"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ImgDiceAttackBackground"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/black"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/ImgDiceAttack"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/one"
                        android:background="@null"/>

                </FrameLayout>

                <Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ImgDiceDefenseBackground"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/black"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/ImgDiceDefense"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/two"
                        android:background="@null"/>

                </FrameLayout>

                <Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ImgDiceCounterBackground"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/black"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/ImgDiceCounter"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/three"/>

                </FrameLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/BtnAttack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공격"/>

                <Button
                    android:id="@+id/BtnDefense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="방어"/>

                <Button
                    android:id="@+id/BtnCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카운터"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="250dp"
                    android:layout_height="30dp">

                    <ImageView
                        android:id="@+id/ImgHpBackround"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#333333"/>

                    <ImageView
                        android:id="@+id/ImgCurrentHp"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="#FF0000" />

                    <TextView
                        android:id="@+id/TxtHpBar"
                        android:layout_width="120dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="50/100"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/neodgm"/>

                </FrameLayout>



                <Space
                    android:layout_width="50dp"
                    android:layout_height="match_parent"/>

                <Button
                    android:id="@+id/BtnDiceRoll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주사위" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>