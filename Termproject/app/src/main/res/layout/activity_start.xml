<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer">

    <!-- Main content layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/startimg">

        <Space
            android:layout_width="match_parent"
            android:layout_height="600dp"/>

        <Button
            android:id="@+id/BtnStart"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:background="#00000000"
            android:text="게임 시작"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:fontFamily="@font/neodgm"/>
    </LinearLayout>

    <!-- Drawer content layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/black"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mypageText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="left"
                android:text="내 정보"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:fontFamily="@font/neodgm"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:gravity="center"
                android:padding="4dp"
                android:background="@drawable/button_white_border"
                android:src="@drawable/profile1"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <TextView
                android:id="@+id/myNick"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:text="최대여덟글자이다"
                android:textColor="#bbbbbb"
                android:textSize="30dp"
                android:paddingLeft="5dp"
                android:fontFamily="@font/neodgm"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/myRank"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:text="1등"
                android:textColor="@color/white"
                android:textSize="80dp"
                android:fontFamily="@font/neodgm"
                android:paddingTop="15dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <TextView
                android:id="@+id/myScore"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:text="점수: 9999"
                android:textColor="#ffccff"
                android:textSize="40dp"
                android:fontFamily="@font/neodgm"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <!-- Spacer to push the logout button to the bottom -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:gravity="start"
            android:paddingTop="20dp"
            android:background="@null"
            android:text="로그아웃"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/neodgm"/>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>