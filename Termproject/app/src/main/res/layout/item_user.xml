<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ItemUserRoot"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/item_background">

        <TextView
            android:id="@+id/ItemRank"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="1"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:fontFamily="@font/neodgm"
            android:paddingTop="30dp"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/ItemProfile"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@drawable/profile1"
            android:background="@drawable/button_white_border"
            android:padding="2dp"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/ItemNick"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="닉네임이다"
            android:textSize="23sp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:fontFamily="@font/neodgm"
            android:paddingTop="10dp"/>

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/ItemScore"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:fontFamily="@font/neodgm"
            android:gravity="center"
            android:text="999"
            android:textAlignment="center"
            android:textColor="#ccdd0033"
            android:textSize="23sp"
            android:paddingTop="11dp"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/ItemConnect"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/grey_dot"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/ItemFight"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="결투"
            android:textSize="23sp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:fontFamily="@font/neodgm"
            android:paddingTop="11dp"/>
    </LinearLayout>


</LinearLayout>
